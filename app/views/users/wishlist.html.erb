<div class="row">
  <div class="large-12 small-12 columns">
<h1 class="centra charT">La lista dei tuoi Desideri</h1>

</div>
</div>

<div class="row">
  <div class="large-12 column">

   <%= foundation_paginate @wishs %>
    <% @wishs.each do |wish| %>

      <table class="large-12 small-6 column">
        <tr>
          <td class="large-4 small-12 column centra"><%= link_to (image_tag wish.product.image_url.url(:medium)), product_path(wish.product) %></td>
          <td class="large-5 small-8 column" data-equalizer-watch>
            <h4><%= link_to wish.product.title, product_path(wish.product) %></h4>
            <h5>Prezzo: <%= number_to_currency(wish.product.price,:unit => "€ ", :separator => ",", :delimiter => ".") %></h5>
            <h5>Disponibilità (kg): <%= number_to_currency(wish.product.qnt, :unit => "", :separator => ",", :delimiter => ".", precision: 3) %></h5>     
          </td>
          <% if wish.product.push? %>
            <td class="large-2 small-4 column"><i class="fi-burst-sale size-72"></i></td>
          <% else %>
            <td class="large-2 small-4 column"></td>
          <% end %>
          <td class="large-1 column centra"><%= link_to 'Elimina', delete_to_wishlist_path(product_id: wish.product_id), data: { confirm: 'Are you sure?' }, method: :delete, class:'button radius tiny' %></td>
        </tr>
      </table>    

    <% end %>
    <%= foundation_paginate @wishs %>

</div>
</div>
