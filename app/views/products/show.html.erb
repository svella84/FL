<p id="notice"><%= notice %></p>

<div class="row">
  <div class="large-12 column">
    <div class="row">
      <div class="large-5 column">
        <%= image_tag @product.image_url.url(:large) %>
        <%= form_for :line_items, url: line_items_path(:product_id => @product) do |f| %>
          <div class="panel large-12 column">
            <div class="large-9 column">
              <h5>Quantità Desideratà (Kg):</h5>
	    </div>
            <div class="large-3 column">
              <%= f.text_field :qnt, value: 1 %>
	    </div>
            <%= f.submit 'Add to Cart', class: 'button expand success' %>
          </div>
          
        <% end %>
      </div>

      <div class="large-7 column">
        <ul class="pricing-table">
          <li class="title"><%= @product.title %></li>
          <li class="bullet-item"><h5>Categoria</h5><%= @product.category.name %></li>
          <li class="description"><h5>Descrizione</h5><%= @product.description %></li>
          <li class="bullet-item"><h5>Disponibilità (kg)</h5><%= @product.qnt %></li>
          <li class="price"><h5>Prezzo al (Kg)</h5><%= number_to_currency(@product.price,:unit => "€ ", :separator => ",", :delimiter => ".") %></li>
        </ul>
      </div>
    </div>
    
    <%= link_to 'Back', products_path, class: 'button large-12 column' %>
    <% if signed_in? %>
      <% if current_user.try(:admin?) %>
        <%= link_to 'Edit', edit_product_path(@product), class: 'button large-12 column' %>
      <% end %>
    <% end %>
  </div>
</div>

